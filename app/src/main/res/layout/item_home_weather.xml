<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivIcon"
                tools:text="February 18, 2022"
                android:textSize="12sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivIcon"
                tools:text="12:30 am"
                android:textSize="16sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvLocationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivIcon"
                tools:text="Dubai"
                android:textSize="16sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvWindDirect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/tvWindSpeed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivIcon"
                tools:text="Wind Direct: North"
                android:textSize="10sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvWindSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivIcon"
                tools:text="Wind Speed: 19 km/h"
                android:textSize="10sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/ic_launcher_foreground"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/l_grey" />


            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                tools:text="78 F"
                android:textSize="20sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTemp"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                tools:text="Clear Sky"
                android:textSize="12sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvMaxTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvMinTemp"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                tools:text="Max: 80 F"
                android:textSize="12sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvMinTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@+id/ivIcon"
                tools:text="Min: 65F"
                android:textSize="12sp"
                android:textColor="@color/titleTextColor"
                android:maxLines="1"
                android:ellipsize="end" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>